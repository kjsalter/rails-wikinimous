<%= form_for @article, :html => {:class => "form"} do |f| %>

<div class="form-group row">
  <%= f.label :title, class: "col-md-12" %>
  <%= f.text_field :title, class: "col-md-12 form-control" %>
</div>

<div class="form-group row">
  <%= f.label :content, class: "col-md-12" %>
  <%= f.text_area :content, class: "col-md-12 form-control" %>
</div>

<%= f.submit "Create/Edit article", class: "btn btn-default btn-primary"%>
<% end %>
